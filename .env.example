# DeepAgents & MCP Integration Environment Configuration
# Copy to .env and configure for your environment

# Required: Anthropic API Key for LLM operations
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Embedding Model Configuration
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Observability & Tracing (Optional)
LANGCHAIN_TRACING_V2=false
LANGSMITH_API_KEY=
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:4317

# Caching Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Database Configuration
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/deepagents

# Performance Tuning
MAX_RETRIEVAL_RESULTS=10
LOG_LEVEL=INFO

# MCP Tools Configuration (Optional)
CONTEXT7_API_KEY=

# Development Settings
DEBUG_MCP=false
ENABLE_PERFORMANCE_LOGGING=true

# Docker Environment Overrides (for compose)
COMPOSE_PROJECT_NAME=deepagents-mcp
DOCKER_BUILDKIT=1